{
    "version": 4,
    "configurations": [
        {
            "name": "MinGW",
            "includePath": [
                "${workspaceFolder}/**",
                "C:/MinGW/include",                       // Path to MinGW's include files
                "C:/MinGW/lib/gcc/mingw32/6.3.0/include"   // Path to GCC's include files
            ],
            "compilerPath": "C:/MinGW/bin/gcc.exe",         // Path to GCC's executable
            "intelliSenseMode": "gcc-x64",                  // IntelliSense mode for GCC
            "browse": {
                "path": [
                    "${workspaceFolder}",
                    "C:/MinGW/include",
                    "C:/MinGW/lib/gcc/mingw32/6.3.0/include"
                ]
            },
            "cStandard": "c11",
            "cppStandard": "c++17"
        }
    ]
}
